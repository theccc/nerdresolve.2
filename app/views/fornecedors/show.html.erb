<%- model_class = Fornecedor -%>
<div class="page-header">
  <h1><%=t '.title', :default => Fornecedor %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:fornecedor) %></dt>
      <dd><pre class="prettyprint"><%= @fornecedor.fornecedor %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:codigo) %></dt>
      <dd><pre class="prettyprint"><%= @fornecedor.codigo %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              fornecedors_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_fornecedor_path(@fornecedor), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              fornecedor_path(@fornecedor),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

