<%= form_for @blog, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :titulo, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :titulo, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :subtitulo, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :subtitulo, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :texto, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :texto, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :tags, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :tags, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  blogs_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
